<div class="row">
  <div class="col-md-12">
    <div class="well well-sm">
      <h1>Your Completed Quests</h1>
      <% @quests.each do |quest| %>
        <div class="row">
          <div class="col-md-3">
            <img src="<%= quest.imagesrc %>" class="preview">
          </div>
          <div class="col-md-9">
            <h2><strong>Title: </strong><%= quest.title %></h2>
            <h3><strong>Description: </strong><%= quest.description %></h3>
          </div>
        </div>
        <hr>
      <% end %>
      <% if @quests.count < 10 %>
        <% extra = 10 - @quests.count %>
        <% while extra > 0 do %>
          <div class="row standard">
          </div>
          <hr>
          <% extra = extra-1 %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
